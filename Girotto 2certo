 void escolher(){
      char r;
      char S, s, N, n;
      do{

        printf("\n\n\t\t Deseja jogar denovo? \n\t\t <S>Sim <N>Nao \n");      
        scanf("%9s", &r);
 
    if((r == 'S' )|| (r == 's' )) {
	    system("cls");
	    pergunta();
	    escolher();
//    	questao2();
} else if ((r == 'N') || (r =='n')) {
    
    system("cls");

    	main();
//    	escolher();
//		questao4();
   
} else {
	printf("invalido!");

system("cls");
	  }
	}  while (r!=s || r!=S || r!=N || r!=n);
}
	
